# Norko E-Commerce Image Upload Configuration
# Copy this file to .env and fill in your actual values

# Crystallize CMS Configuration (Primary Image Host)
CRYSTALLIZE_TENANT_IDENTIFIER=your-tenant-name
CRYSTALLIZE_ACCESS_TOKEN_ID=your-access-token-id
CRYSTALLIZE_ACCESS_TOKEN_SECRET=your-access-token-secret

# Supabase Configuration (Backup Image Host - Optional)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# Development Settings
NODE_ENV=development
DEBUG=true

# Optional: Rate Limiting
UPLOAD_RATE_LIMIT=10
UPLOAD_DELAY_MS=2000

# Optional: Image Processing
MAX_IMAGE_SIZE=5242880
MIN_IMAGE_SIZE=10240
JPEG_QUALITY=85
GENERATE_THUMBNAILS=true
